<Window
    x:Class="Nuart.DeviceSamples.Heaters.Src.OmronHeaterWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="OmronHeaterWindow"
    Width="600"
    Height="350"
    mc:Ignorable="d">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <Button
                x:Name="Start"
                Width="200"
                Height="50"
                Margin="5"
                Click="Start_OnClick">
                Start
            </Button>
            <Button
                x:Name="ResetOnce"
                Width="200"
                Height="50"
                Margin="5"
                Click="ResetOnce_OnClick">
                Reset Once
            </Button>
            <Button
                x:Name="ResetAlways"
                Width="200"
                Height="50"
                Margin="5"
                Click="ResetAlways_OnClick">
                Reset Always
            </Button>
        </StackPanel>
    </Grid>
</Window>