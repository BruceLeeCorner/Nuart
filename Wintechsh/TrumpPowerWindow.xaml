<Window x:Class="WpfApp1.TrumpPowerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="TrumpPowerWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button x:Name="StartHeater" Click="Start_OnClick" Width="200" Height="50" Margin="5">start</Button>
            <Button x:Name="ResetOnce" Click="ResetOnce_OnClick"  Width="200" Height="50" Margin="5">Reset Once</Button>
            <Button x:Name="ResetAlways" Click="ResetAlways_OnClick"  Width="200" Height="50" Margin="5">Reset Always</Button>
        </StackPanel>
    </Grid>
</Window>